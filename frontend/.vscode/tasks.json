{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve Angular Application",
      "type": "shell",
      "command": "pnpm",
      "args": ["start"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Compiled successfully"
        }
      },
      "presentation": {
        "reveal": "always"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Build Core Library", "Build UI Library"]
    },
    {
      "label": "Build Core Library",
      "type": "shell",
      "command": "pnpm",
      "args": ["build:core"],
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build UI Library",
      "type": "shell",
      "command": "pnpm",
      "args": ["build:ui"],
      "group": "build",
      "problemMatcher": ["$tsc"],
      "dependsOn": ["Build Core Library"]
    },
    {
      "label": "Build All",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "group": "build",
      "problemMatcher": ["$tsc"]
    }
  ]
} 